{{#if erros}}
    {{#each erros}}
        <div class="alert alert-danger">{{texto}}</div>
    {{/each}}
{{/if}}

<h3>Crie sua conta:</h3>
<div class="card">
    <div class="card-body">
        <form action="/usuarios/registro" method="POST">
            <label for="nome">Nome: </label>
            <input type="text" name="nome" id="nome" class="form-control" required value="{{usuario.nome}}">
            
            <label for="email">Email: </label>
            <input type="email" name="email" id="email" class="form-control" required value="{{usuario.email}}">
            
            <label for="senha">Senha: </label>
            <input type="password" name="senha" id="senha" class="form-control" required>
            
            <label for="senha2">Confirme sua senha:</label>
            <input type="password" name="senha2" id="senha2" class="form-control" required>
            
            <button type="submit" class="btn btn-success mt-3">Criar conta</button>
        </form>
    </div>
</div>
