<h2>Lista de Categorias:</h2>
<hr>
<a href="/admin/categorias/add"><button class="btn btn-success"> Nova Categoria</button></a>

{{#each categorias}}
    <div class="card mt-2">
        <div class="card-body">
            <h4>{{nome}}</h4>
            <small><Strong>Slug:</Strong> {{slug}}</small> <br>
            <small><strong>Data de criação:</strong> {{date}}</small> <br>
            <a href="/admin/categorias/edit/{{_id}}"><button class="btn btn-success mt-3">Editar</button></a>
            <form action="" method="POST">
                <input type="hidden" name="id" value="{{_id}}">
                <button type="submit" class="btn btn-danger mt-2">Deletar</button>
            </form>
        </div>
    </div>
{{else}}

{{/each}}