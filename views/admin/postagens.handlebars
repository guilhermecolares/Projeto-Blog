<h2>Lista de Postagens:</h2>
<hr>
<a href="/admin/postagens/add"><button class="btn btn-success"> Nova Postagem</button></a>

{{#each postagens}}
    <div class="card mt-3">
        <div class="card-body">
            <h4>{{titulo}}</h4>
            <small><Strong>Slug:</Strong> {{slug}}</small> <br>
            <small><strong>Data de criação:</strong> {{date}}</small> <br>
            <small><strong>Categoria:</strong> {{categoria.nome}}</small> <br>
            <a href="/admin/postagens/edit/{{_id}}"><button class="btn btn-success mt-3">Editar</button></a>
        </div>
    </div>
{{else}}

{{/each}}